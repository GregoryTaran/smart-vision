{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "ignore": [".env", ".local.env"]
  },
  "hosting": {
    "site": "smartvision-test",
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      { "source": "/api/**", "function": "ask" },
      { "source": "/saveUser", "function": "saveUser" },
      { "source": "/checkUser", "function": "checkUser" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
